{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev:all": {
      "cache": false,
      "persistent": true,
      "with": [
        "dev:server",
        "dev:electron"
      ]
    },
    "dev:server": {
      "cache": false,
      "persistent": true
    },
    "dev:electron": {
      "cache": false,
      "persistent": true,
      "with": [
        "@mediago/electron-preload#dev",
        "@mediago/browser-extension#dev"
      ]
    },
    "@mediago/electron-preload#dev": {
      "persistent": true,
      "outputs": [
        "build/**"
      ]
    },
    "@mediago/browser-extension#dev": {
      "persistent": true,
      "cache": false
    },
    "build:all": {
      "cache": true,
      "with": [
        "build:server",
        "build:electron"
      ]
    },
    "build:server": {
      "cache": true,
      "outputs": [
        "build/**"
      ]
    },
    "build:electron": {
      "cache": true,
      "outputs": [
        "build/**"
      ],
      "dependsOn": [
        "@mediago/electron-preload#build",
        "@mediago/browser-extension#build"
      ]
    },
    "@mediago/electron-preload#build": {
      "outputs": [
        "build/**"
      ]
    },
    "@mediago/browser-extension#build": {
      "outputs": [
        "build/**"
      ]
    },
    "pack:server": {
      "cache": false,
      "dependsOn": [
        "clean:server",
        "build:server"
      ],
      "outputs": [
        ".mediago-server/**"
      ]
    },
    "release:server": {
      "cache": false,
      "dependsOn": [
        "pack:server"
      ]
    },
    "pack:electron": {
      "cache": false,
      "dependsOn": [
        "clean:electron",
        "build:electron"
      ],
      "outputs": [
        "app/build/**"
      ]
    },
    "release:electron": {
      "cache": false,
      "dependsOn": [
        "clean:electron",
        "build:electron"
      ],
      "outputs": [
        "app/build/**"
      ]
    },
    "clean:server": {
      "cache": false,
      "outputs": []
    },
    "clean:electron": {
      "cache": false,
      "outputs": []
    }
  }
}
