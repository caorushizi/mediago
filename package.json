{
  "name": "mediago",
  "version": "0.1.0",
  "description": "A powerful and easy-to-use online video downloader",
  "author": "caorushizi",
  "homepage": "https://downloader.caorushizi.cn/",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "knip": "knip",
    "dev:electron": "cross-env APP_TARGET=app turbo run dev -F @mediago/electron -F @mediago/ui",
    "dev:server": "cross-env APP_TARGET=server turbo run dev -F @mediago/server -F @mediago/ui",
    "dev": "turbo run dev:all",
    "build:electron": "turbo run build",
    "build:server": "turbo run build:server",
    "build": "turbo run build --filter=@mediago/electron --filter=@mediago/ui",
    "lint": "turbo run lint",
    "rebuild:server": "pnpm -F @mediago/server rebuild",
    "rebuild:electron": "pnpm -F @mediago/electron run rebuild",
    "rebuild:workspace": "pnpm rebuild:server && pnpm rebuild:electron",
    "pack:server": "turbo run pack:server",
    "pack:electron": "turbo run pack:electron",
    "release:server": "turbo run release:server",
    "release:electron": "turbo run release:electron",
    "docs:dev": "pnpm -F @mediago/docs run docs:dev",
    "docs:build": "pnpm -F @mediago/docs run docs:build"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.7.0",
    "@typescript/native-preview": "7.0.0-dev.20251023.1",
    "cross-env": "^10.1.0",
    "knip": "^5.64.2",
    "turbo": "^2.5.8"
  }
}