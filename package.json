{
  "name": "mediago",
  "version": "0.1.0",
  "description": "mediago",
  "author": "caorushizi",
  "homepage": "https://downloader.caorushizi.cn/",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "turbo build --filter=plugin --filter=mobile && turbo dev --parallel",
    "dev:web": "turbo dev:web --parallel",
    "build": "turbo build",
    "build:plugin": "turbo build --filter=plugin",
    "build:electron": "turbo build --filter=electron",
    "build:web": "turbo build --filter=frontend",
    "build:backend": "turbo build --filter=webapi",
    "build:renderer": "turbo build --filter=frontend",
    "build:mobile": "turbo build --filter=mobile",
    "build:web-release": "turbo types && turbo build --filter=webapi --filter=frontend",
    "build:docker": "pnpm build:web-release && docker build -t caorushizi/mediago:latest .",
    "rebuild:web": "turbo rebuild --filter=webapi",
    "rebuild:electron": "turbo rebuild --filter=electron",
    "beta": "turbo build && pnpm -F main run pack",
    "release": "turbo build && pnpm -F main run release",
    "types": "turbo types",
    "types:renderer": "turbo types --filter=frontend",
    "types:watch": "turbo types:watch --filter=electron",
    "prepare": "husky",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "spellcheck": "cspell \"apps/**/src/**/*.{ts,tsx}\" \"packages/**/src/**/*.{ts,tsx}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "biome format --write .",
    "lint-staged": "turbo lint-staged"
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/core": "^19.3.0",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@commitlint/format": "^19.3.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cspell": "^8.8.3",
    "cz-git": "^1.9.2",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.6",
    "tsx": "^4.11.0",
    "turbo": "^2.5.6",
    "zx": "^8.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "better-sqlite3",
      "core-js",
      "electron",
      "es5-ext",
      "esbuild",
      "node-pty",
      "sqlite3"
    ]
  },
  "dependencies": {
    "react-dom": "18.3.1"
  }
}